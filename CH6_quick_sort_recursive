def quick_sort_recursive(a):
    l = len(a)
    if l <= 1:
        return a
    else:
        pivot = a[l // 2]
        left_partition = []
        for x in a:
            if x < pivot:
                left_partition.append(x)
        middle = []
        for x in a:
            if x == pivot:
                middle.append(x)
        right_partition = []
        for x in a:
            if x > pivot:
                right_partition.append(x)
        return quick_sort_recursive(left_partition) + middle + quick_sort_recursive(right_partition)

    # Example usage
a = [38, 27, 43, 3, 9, 82, 7]
a=quick_sort_recursive(a)
print("Sorted aay:", a)
