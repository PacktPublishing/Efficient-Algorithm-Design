def merge_sort_recursive(a):
    if len(a) > 1:
        mid_point = len(a) // 2
        left_partition = a[:mid_point]
        right_partition = a[mid_point:]
        # Recursively sorting the first partition
        merge_sort_recursive(left_partition)
        # Recursively sorting the second parition
        merge_sort_recursive(right_partition)
        i = j = k = 0
        # Copy data to temp arrays left_partition[] and right_partition[]
        while i < len(left_partition) and j < len(right_partition):
            if left_partition[i] < right_partition[j]:
                a[k] = left_partition [i]
                i += 1
            else:
                a[k] = right_partition [j]
                j += 1
            k += 1
        # Checking if any element was left
        while i < len(left_partition):
            a[k] = left_partition [i]
            i += 1
            k += 1
        while j < len(right_partition):
            a[k] = right_partition [j]
            j += 1
            k += 1

a=[38, 27, 43, 3, 9, 82]
merge_sort_recursive(a)
print(a)
